---
interface Props {
  href: string;
  emoji: string;
  title: string;
  tagline: string;
}

const { href, emoji, title, tagline } = Astro.props;
---

<a href={href} class="smell-card">
  <div style="display: flex; align-items: flex-start; gap: 1rem;">
    <span style="font-size: 2rem; line-height: 1;">{emoji}</span>
    <div>
      <h3>{title}</h3>
      <p>{tagline}</p>
    </div>
  </div>
</a>
